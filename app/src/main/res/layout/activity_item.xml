<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardBackgroundColor="#57768A"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageHinh"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:background="@drawable/radius_img"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tencasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:text="Tên bài hát"
                android:textColor="#ED0909"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/imageHinh"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/tn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageHinh"
                app:layout_constraintTop_toBottomOf="@+id/tencasi"
                app:layout_constraintVertical_bias="0.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nghedanh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:text="nghedanh"
                    android:textColor="#0DDC82"
                    android:textSize="20dp"
                    android:textStyle="italic" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tn"
                app:layout_constraintStart_toEndOf="@+id/imageHinh"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tenquocgia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="quocgia"
                    android:textColor="#0DDC82"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginStart="10dp"/>

                <TextView
                    android:id="@+id/sosao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sosao"
                    android:textColor="#CDDC39"
                    android:textSize="20dp"
                    android:textStyle="italic"
                    android:layout_marginStart="20dp"/>

                <ImageView
                    android:id="@+id/anhsao"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/anhsao"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="4dp"/>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>